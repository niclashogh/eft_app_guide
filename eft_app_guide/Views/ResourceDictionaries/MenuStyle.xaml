<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--#region MENU_LIST_ITEM-->
    <Style TargetType="ListBoxItem" x:Key="MENU_LIST_ITEM">
        <Setter Property="IsTabStop" Value="False"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBoxItem">
                    
                    <!--#region Content-->
                    <ContentPresenter />
                    <!--#endregion-->
                    
                    <!--#region Triggers-->
                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True" />

                    </ControlTemplate.Triggers>
                    <!--#endregion-->
                    
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->

    <!--#region MENU_ITEM_CONTENT (Background = #1A000000)-->
    <Style TargetType="Grid" x:Key="MENU_ITEM_CONTENT">
        <Setter Property="Height" Value="40"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Margin" Value="0,5"/>
        <Setter Property="Background" Value="Red"/>

        <Setter Property="ItemsControl.ItemTemplate">
            <Setter.Value>
                <DataTemplate>
                    <Grid>
                        <Image Source="{Binding Tag, RelativeSource={RelativeSource TemplatedParent}}" />
                    </Grid>
                </DataTemplate>
            </Setter.Value>
        </Setter>


        <Style.Triggers>
            <Trigger Property="IsMouseOver" Value="True">
                <Setter Property="Cursor" Value="Hand"/>

                <!-- Zoom in -->
                <Trigger.EnterActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Width" To="48" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="Height" To="48" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.EnterActions>

                <!-- Zoom out -->
                <Trigger.ExitActions>
                    <BeginStoryboard>
                        <Storyboard>
                            <DoubleAnimation Storyboard.TargetProperty="Width" To="40" Duration="0:0:0.2"/>
                            <DoubleAnimation Storyboard.TargetProperty="Height" To="40" Duration="0:0:0.2"/>
                        </Storyboard>
                    </BeginStoryboard>
                </Trigger.ExitActions>
            </Trigger>
        </Style.Triggers>
    </Style>
    <!--#endregion-->

    <!--#region MENU_CONTEXT_ITEM (Delete?)-->
    <Style TargetType="MenuItem" x:Key="MENU_CONTEXT_ITEM">
        <Setter Property="IsTabStop" Value="False"/>

        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate>

                    <!--#region Content-->
                    <Grid>
                        <Border x:Name="BORDER"
                            Background="#1E1E1E"
                            Padding="20,0"
                            Height="40">

                            <TextBlock Text="{Binding Header, RelativeSource={RelativeSource TemplatedParent}}"
                                       Foreground="White"
                                       HorizontalAlignment="Center"
                                       VerticalAlignment="Center"/>
                        </Border>
                    </Grid>
                    <!--#endregion-->

                    <!--#region Triggers-->
                    <ControlTemplate.Triggers>

                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="BORDER" Property="Background" Value="#282828"/>
                            <Setter Property="Cursor" Value="Hand"/>
                        </Trigger>

                    </ControlTemplate.Triggers>
                    <!--#endregion-->

                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
    <!--#endregion-->

</ResourceDictionary>