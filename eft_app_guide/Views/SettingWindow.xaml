<Window x:Class="eft_app_guide.Views.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:eft_app_guide.Views"
        mc:Ignorable="d"
        
        xmlns:usercontrols="clr-namespace:eft_app_guide.Views.AsUserControls"
        xmlns:viewmodels="clr-namespace:eft_app_guide.ViewModels.ToUserControls"
        
        WindowStyle="None"
        Title="Settings"
        Height="1080"
        Width="1920">

    <WindowChrome.WindowChrome>
        <WindowChrome GlassFrameThickness="0"
                      CornerRadius="5"
                      CaptionHeight="0" />
    </WindowChrome.WindowChrome>
    
    <!--#region Dictionary Resources-->
    <Window.Resources>
        <ResourceDictionary Source="/Views/ResourceDictionaries/SettingResourceDictionary.xaml"/>
    </Window.Resources>
    <!--#endregion-->

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <Border Grid.RowSpan="2" Background="DarkGreen" />
        
        <Grid Background="#00000000"
              MouseLeftButtonDown="TopBar_LeftHold">
            
            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">
            
                <Button Content="_"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10,0"
                        Click="TrayBtn_Click" />
                
                <Button Content="x"
                        Background="Transparent"
                        BorderThickness="0"
                        Padding="10,0"
                        Click="CloseBtn_Click" />
            </StackPanel>
        </Grid>

        <ContentControl Grid.Row="1" Content="{Binding CurrentUserControl, Mode=OneWay}" />
    </Grid>
</Window>
